{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Custom */
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@pages": [
        "./src/pages"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@images/*": [
        "./src/assets/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@hocs": [
        "./src/hocs"
      ],
      "@store-services/*": [
        "./src/app/service/*"
      ],
      "@store": [
        "./src/app/store.ts"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
